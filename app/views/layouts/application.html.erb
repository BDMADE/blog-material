<!DOCTYPE html>
<html>
<head>
  <title>blog1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js">
  <%= csrf_meta_tags %>
</head>
<body>
<p class="navbar-text pull-right">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.name %> (<%= current_user.email %>) </strong>
  
  

  <% if current_user.role.name == 'admin' %>
    <%= link_to 'User Roles',roles_path, :class => 'navbar-link' %> |
    <%= link_to 'Members',members_path, :class => 'navbar-link' %> |
  <% end %>
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
<%= link_to 'Admin', admin_path, :class => 'navbar-link' %> |
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>

<% if !user_signed_in? %>
  <% if notice %>
      <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert"><%= alert %></p>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>

